<form class="form-inline" action="{{ addProductPath product.id }}">
  <section class="form-group">
    <label for="number">{{ product.prettyPrice }}</label>
    <input type="number" step="1" min="0" max="99" value="1" class="form-control" name="number">
  </section>
  <button class="btn btn-primary">Add to Cart</button>
</form>
